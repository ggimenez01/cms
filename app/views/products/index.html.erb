<!-- app/views/products/index.html.erb -->
<div class="container mt-4">
  <h1>Products</h1>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category</th>
     
        <th>Add to Cart</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td>
            <% if product.image.present? %>
              <%= image_tag product.image.url, class: "img-thumbnail" %>
            <% else %>
              <p>Image Not Available</p>
            <% end %>
          </td>
          <td><%= link_to product.name, product_path(product) %></td>
          <td><%= number_to_currency(product.price) %></td>
          <td><%= product.category.name %></td>

<td>
  <%= button_to "Add to Cart", add_to_cart_product_path(product, quantity: 1), method: :post, class: "btn btn-success" %>
</td>

        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @products %>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Function to handle fetching bot response
    function fetchBotResponse(command) {
      const csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute("content");

      fetch("/api/bot/commands", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          "X-CSRF-Token": csrfToken,
        },
        body: JSON.stringify({ command: command }),
      })
        .then((response) => response.json())
        .then((data) => {
          const botResponse = data.message;
          const botResponseElement = document.createElement("div");
          botResponseElement.textContent = botResponse;

          // Assuming you have a specific element on your product page where you want to display the bot response.
          // Replace "botResponseContainer" with the actual ID or class of the container element.
          const botResponseContainer = document.querySelector("#botResponseContainer");
          botResponseContainer.appendChild(botResponseElement);
        })
        .catch((error) => {
          console.error("Error fetching bot response:", error);
          // Handle error if necessary.
        });
    }

    // Add an event listener to the button with ID "send-command"
    const sendCommandButton = document.querySelector("#send-command");
    sendCommandButton.addEventListener("click", function () {
      // When the button is clicked, get the value from the input field and call the fetchBotResponse function.
      const command = document.querySelector("#bot-command").value;
      fetchBotResponse(command);
    });

    // ... Your other event listeners and JavaScript code ...
  });
</script>